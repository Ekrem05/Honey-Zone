@model ChangeOrderStatusViewModel
@{
}

<form asp-action="ChangeStatus" class="bg-light mt-5 p-5" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <input asp-for="Id" type="hidden">
        <div class="mb-3">
            <label><string class="bg-warning">Warning</string> You will change the status of the order! Are you sure?</label>
            <br />
            <label>Select Status: </label>
            <select asp-for="@Model.StatusId" class="form-control" aria-required="true">
                <option disabled >Current status: "@Model.CurrentStatus"</option>
                @foreach (var status in Model.Statuses)
                {
                    <option value="@status.Id">@status.Name</option>
                }
            </select>
            <span asp-validation-for="StatusId" class="bg-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <a type="button"
           class="btn btn-secondary"
           asp-action="Index">
            Cancel
        </a>
        <button type="submit" class="btn btn-success" id="liveToastBtn">
            Change status
        </button>
    </div>
</form>