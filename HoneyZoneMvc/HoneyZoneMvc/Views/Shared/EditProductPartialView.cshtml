@using HoneyZoneMvc.Infrastructure.Data.Models.ViewModels
@model ProductViewModel

<div class="modal fade"
     id="Edit-@Model.ProductView.Id"
     tabindex="-1"
     aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">
                    Редактирай
                </h1>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="SubmitChanges" method="post" enctype="multipart/form-data">
                    <input hidden asp-for="ProductView.Id" />
                    <label class="form-label mt-1" asp-for="ProductView.MainImageFile">Основна снимка <span class="bg-warning">(Ако не се посочи снимка ще остане същата)</span> </label>
                    <div class="input-group mb-3">
                        <input type="file" asp-for="ProductView.MainImageFile" class="form-control"
                               accept="image/jpg,image/png,image/jpeg" />
                        <span asp-validation-for="ProductView.MainImageFile" class="bg-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label" asp-for="ProductView.Name">Име:</label>
                        <input type="text"
                               class="form-control"
                               id="NameEdit"
                               asp-for="ProductView.Name" />
                        <div id="currentName" class="form-text">
                            Текущо име:@Model.ProductView.Name
                        </div>
                        <span asp-validation-for="ProductView.Name" class="bg-danger"></span>
                    </div>

                    <div class="input-group">
                        <label class="form-label m-1" asp-for="ProductView.Price">Цена:</label>
                        <input type="number"
                               class="form-control"
                               id="PriceEdit"
                               asp-for="ProductView.Price" />
                        <span class="input-group-text">лв</span>
                        <span class="input-group-text">0.00</span>
                        <span asp-validation-for="ProductView.Price" id="PriceValidation" class="bg-danger"></span>
                    </div>
                    <div id="currentPrice" class="form-text">
                        Текуща цена:@Model.ProductView.Price
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProductView.Category" class="control-label">Категория</label>
                        <select asp-for="ProductView.Category" asp-items="new SelectList(@Model.CategoryDtos.Select(c=>c.Name))" class="form-control"></select>
                        <span asp-validation-for="ProductView.Category" class="bg-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ProductView.QuantityInStock">Количество в склад:</label>
                        <input type="number"
                               class="form-control"
                               id="QuantityInStockEdit"
                               asp-for="ProductView.QuantityInStock" />
                        <span asp-validation-for="ProductView.QuantityInStock" class="bg-danger"></span>
                        <div id="currentName" class="form-text">
                            Текущo количесво в склад:@Model.ProductView.QuantityInStock
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ProductView.ProductQuantity">Дозировка:</label>
                        <input type="text"
                               class="form-control"
                               id="ProductQuantityEdit"
                               asp-for="ProductView.ProductQuantity" />
                        <span asp-validation-for="ProductView.ProductQuantity" class="bg-danger"></span>
                        <div id="currentName" class="form-text">
                            Текуща дозировка:@Model.ProductView.ProductQuantity
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ProductView.Description">Описание:</label>
                        <input rows="4" cols="50" type="text"
                               class="form-control"
                               id="DescriptionEdit"
                               asp-for="ProductView.Description" />
                        <span asp-validation-for="ProductView.Description" class="bg-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal">
                            Отказ
                        </button>
                        <button type="submit" class="btn btn-success">
                            Запази промени
                        </button>
                    </div>
                </form>
            </div>
        
        </div>

    </div>
</div>