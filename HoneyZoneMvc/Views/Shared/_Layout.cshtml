<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HoneyZoneMvc</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Roboto+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HoneyZoneMvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin-products.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/picture-quote.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/store.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/store-products.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/description.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product-animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/about-footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/orderForm.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/featured.css" asp-append-version="true" />

    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>


    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js" charset="utf-8"></script>

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" asp-append-version="true" />

</head>
<body>
    @if (!Context.Request.Path.StartsWithSegments("/Identity/Account"))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow">
                <div class="container-fluid" id="myNav">
                    <div class="myImageContainer ">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="@Url.Content("~/Images/logo.png")" alt="Your Image" class="img-fluid logo" />
                        </a>
                    </div>
                    <button class="navbar-toggler btn btn-warning" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <svg xmlns="http://www.w3.org/2000/svg" height="16" width="14" viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.1 by @@fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z" /></svg>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex " id="mainActions">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link  text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User?.IsInRole(AdministratorRoleName)==true)   
                            {
                                <li class="nav-item">
                                    <a class="nav-link  text-light" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                                </li>
                            }  
                            <li class="nav-item">
                                <a class="nav-link  text-light" asp-area="" asp-controller="Shop" asp-action="Index">Shop</a>
                            </li>
                           

                        </ul>
                    </div>
                    <ul class="navbar-collapse collapse navbar-nav flex-grow-1">
                        <a class="nav-link  text-light" asp-area="" asp-controller="Shop" asp-action="Cart">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" fill="white" version="1.1" id="Capa_1" width="2em" height="2em" viewBox="0 0 902.86 902.86" xml:space="preserve">
                            <g>
                            <g>
                            <path d="M671.504,577.829l110.485-432.609H902.86v-68H729.174L703.128,179.2L0,178.697l74.753,399.129h596.751V577.829z     M685.766,247.188l-67.077,262.64H131.199L81.928,246.756L685.766,247.188z" />
                            <path d="M578.418,825.641c59.961,0,108.743-48.783,108.743-108.744s-48.782-108.742-108.743-108.742H168.717    c-59.961,0-108.744,48.781-108.744,108.742s48.782,108.744,108.744,108.744c59.962,0,108.743-48.783,108.743-108.744    c0-14.4-2.821-28.152-7.927-40.742h208.069c-5.107,12.59-7.928,26.342-7.928,40.742    C469.675,776.858,518.457,825.641,578.418,825.641z M209.46,716.897c0,22.467-18.277,40.744-40.743,40.744    c-22.466,0-40.744-18.277-40.744-40.744c0-22.465,18.277-40.742,40.744-40.742C191.183,676.155,209.46,694.432,209.46,716.897z     M619.162,716.897c0,22.467-18.277,40.744-40.743,40.744s-40.743-18.277-40.743-40.744c0-22.465,18.277-40.742,40.743-40.742    S619.162,694.432,619.162,716.897z" />
            </g>
        </g>
        </svg>
                        </a>
          

                        <partial name="_LoginPartial" />

                    </ul>
                </div>
            </nav>
        </header>
    }
   
    <div class=".container-xxl w-100">
        <main role="main" class="pb-3 d-flex flex-column align-items-center">
            @RenderBody()
        </main>
    </div>
    
    @if (!Context.Request.Path.StartsWithSegments("/User"))
    {
        <footer class="border-top footer text-muted" id="myFooter">
            <div class="container">
                &copy; 2024 - HoneyZoneMvc
            </div>
        </footer>
    }
   
    
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
