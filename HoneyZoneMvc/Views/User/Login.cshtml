@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-form-container">
    <header>
        <img src="~/images/logo.png" alt="" />
        <h1>Honey-Zone</h1>
    </header>
    <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Email" class="form-label"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating col-md-12">
            <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
            <label asp-for="Password" class="form-label"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div>
            <div class="checkbox">
                <label asp-for="RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-warning">Влез</button>
        </div>
        <div>
            <a class="btn btn-warning" asp-action="Register" class="w-100 btn btn-lg btn-warning">Регистрирай се</a>
        </div>
    </form>

</div>
